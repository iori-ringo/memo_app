{
	"name": "memo_app",
	"version": "0.1.0",
	"private": true,
	"main": "electron/dist/main.js",
	"description": "Magic Memo Desktop App",
	"author": "User",
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "biome check ./src ./electron",
		"lint:fix": "biome check --write ./src ./electron",
		"format": "biome format --write ./src ./electron",
		"electron:dev": "concurrently -k \"npm run dev\" \"wait-on http://localhost:3000 && tsc -p electron && tsc-alias -p electron/tsconfig.json && electron .\"",
		"electron:build": "npm run build && tsc -p electron && tsc-alias -p electron/tsconfig.json && electron-builder"
	},
	"build": {
		"appId": "com.magicmemo.app",
		"productName": "Magic Memo",
		"mac": {
			"target": "dmg",
			"category": "public.app-category.productivity",
			"icon": "assets/icon.png"
		},
		"files": [
			"out/**/*",
			"electron/dist/**/*",
			"package.json"
		],
		"directories": {
			"output": "dist"
		}
	},
	"dependencies": {
		"@google/generative-ai": "^0.24.1",
		"@radix-ui/react-context-menu": "^2.2.16",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-scroll-area": "^1.2.10",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"@tiptap/extension-bubble-menu": "^3.11.0",
		"@tiptap/extension-color": "^3.11.0",
		"@tiptap/extension-placeholder": "^3.15.3",
		"@tiptap/extension-task-item": "^3.11.0",
		"@tiptap/extension-task-list": "^3.11.0",
		"@tiptap/extension-text-align": "^3.11.0",
		"@tiptap/extension-text-style": "^3.11.0",
		"@tiptap/react": "^3.15.3",
		"@tiptap/starter-kit": "^3.15.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"dotenv": "^16.4.7",
		"electron-log": "^5.4.3",
		"electron-store": "^8.2.0",
		"framer-motion": "^12.25.0",
		"lucide-react": "^0.562.0",
		"next-themes": "^0.4.6",
		"react-resizable": "^3.1.3",
		"react-rnd": "^10.5.2",
		"tailwind-merge": "^3.4.0",
		"uuid": "^13.0.0",
		"zustand": "^5.0.10"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@types/react-resizable": "^3.0.8",
		"@types/uuid": "^10.0.0",
		"concurrently": "^9.2.1",
		"electron": "^39.2.2",
		"electron-builder": "^26.0.12",
		"next": "16.0.3",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"tailwindcss": "^4",
		"tailwindcss-animate": "^1.0.7",
		"tsc-alias": "^1.8.16",
		"typescript": "^5",
		"wait-on": "^9.0.3"
	}
}
